{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "dist",
      "sourceMap": true,
      "declaration": true,
      "module": "commonjs",
      "skipLibCheck": true,
      "strict": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es5",
      "jsx": "react-jsx",
      "lib": [
        "es2017",
        "dom",
      ],
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "src/*",
    ],
    "exclude": [
      "node_modules"
    ]
  }
